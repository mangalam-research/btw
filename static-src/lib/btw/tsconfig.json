{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    // Make it true eventually.
    "noUnusedParameters": false,
    // Make it true eventually.
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "lib": ["dom", "es2015"],
    "baseUrl": ".",
    "paths": {
      "wed/*": ["../../../node_modules/wed/standalone/lib/wed/*"]
    }
  }
}
